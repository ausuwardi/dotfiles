#!/usr/bin/env python3
import subprocess

tpconfig = {
    "DELL0B20:00 04F3:3146 Touchpad": [
        ["libinput Natural Scrolling Enabled", "1"],
        ["libinput Click Method Enabled", "0", "1" ]
    ],
    "MI Wireless Receiver Mouse": [
        ["libinput Natural Scrolling Enabled", "1"],
    ]
}

devices = subprocess.run(["xinput", "list", "--name-only"], stdout=subprocess.PIPE).stdout.decode()

for dev in devices.split('\n'):
    if dev in tpconfig:
        print(f"Configuring {dev}")
        for config in tpconfig[dev]:
            subprocess.run(["xinput", "set-prop", dev] + config)

